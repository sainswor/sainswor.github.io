{{/* layouts/_default/index.json */}}
{{- $index := slice -}}
{{- range where (where .Site.RegularPages.ByDate.Reverse "Type" "not in"  (slice "page" "json")) "Section" "comic" -}}
	{{ if .Params.dateCreated }}
			{{ $.Scratch.Set "date" (.Params.dateCreated) }}
	{{ else }}
			{{- if isset site.Params "date_format" -}}
				{{- $.Scratch.Set "date" (.Date.Format site.Params.date_format) -}}
			{{- else -}}
				{{- $.Scratch.Set "date" (.Date.Format "2006-01-02") -}}
			{{- end -}}
	{{ end }}
    {{- $index = $index | append (dict "title" ( .Title | plainify ) "url" .Permalink "tags" .Params.tags "date" ($.Scratch.Get "date") ) -}}
{{- end -}}
{{- $index | jsonify -}}